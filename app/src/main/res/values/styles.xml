<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorText">@color/colorProfileText</item>
        <item name="colorMainPink"> @color/colorMainPink</item>
        <item name="colorHintText">@color/colorHintText</item>
        <item name="colorNavBackground">@color/colorNavBackground</item>
        <item name="colorEditText">@color/colorEditText</item>
        <item name="ProfileBackground">@drawable/ic_profile_background</item>
        <item name="EventGrid"> @color/colorEventGrid</item>
        <item name="ThemeToggleIcon">@drawable/ic_profile_darkmode</item>
        <item name="imgLoginLogo">@drawable/ic_login_logo</item>
        <item name="imgLoginBackground">@drawable/ic_login_background</item>
        <item name="imgSignUpLogo">@drawable/ic_signup_logo</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorBackground">@color/D_colorBackground</item>
        <item name="colorText">@color/D_colorProfileText</item>
        <item name="colorMainPink"> @color/colorMainPink</item>
        <item name="colorHintText">@color/colorHintText</item>
        <item name="colorEditText">@color/D_colorEditText</item>
        <item name="colorNavBackground">@color/D_colorNavBackground</item>
        <item name="EventGrid"> @color/D_colorEventGrid</item>
        <item name="ProfileBackground">@drawable/ic_profile_dark_background</item>
        <item name="imgLoginLogo">@drawable/ic_login_logo_dark</item>
        <item name="imgLoginBackground">@drawable/ic_login_background_dark</item>
        <item name="imgSignUpLogo">@drawable/ic_signup_logo_dark</item>

    </style>

    <style name="NavBar">
        <item name="android:background">?attr/colorNavBackground</item>
        <item name="android:icon">@color/colorNavBackground</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconTint">@color/colorMainPink</item>
        <item name="menu">@menu/navigation_menu</item>
    </style>

    <style name="LoginEditText">
        <item name="android:paddingLeft">13dp</item>
        <item name="android:background">@drawable/auth_input</item>
        <item name="android:textColorHint">?attr/colorHintText</item>
        <item name="android:textColor">?attr/colorText</item>

    </style>

    <style name="ProfileText">
        <item name="android:textColor">?attr/colorText</item>
    </style>

</resources>
